{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "dist",
    "lib": ["es2020"],
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "strict": true
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false,
    "replacers": {
      "base-url": {
        "enabled": false
      }
    }
  },
  "extends": [],
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
