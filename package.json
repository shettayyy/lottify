{
  "name": "lottify",
  "version": "0.0.1",
  "description": " Explore, download, & discover LottieFiles",
  "main": "index.js",
  "scripts": {
    "start": "tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "lint": "eslint --cache --fix --ext .ts,.tsx .",
    "format": "prettier --ignore-unknown --write",
    "type-check": "sh -c 'tsc --project tsconfig.json --pretty --noEmit'",
    "prepare": "husky",
    "commit": "git-cz",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shettayyy/lottify.git"
  },
  "keywords": [
    "lottie",
    "lottiefiles",
    "lottie-upload",
    "lottie-download",
    "lottie-search",
    "lottie-preview",
    "animation"
  ],
  "author": "Rahul Shetty",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/shettayyy/lottify/issues"
  },
  "homepage": "https://github.com/shettayyy/lottify#readme",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "envalid": "^8.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "graphql": "^16.8.1",
    "helmet": "^7.1.0",
    "http-status-codes": "^2.3.0",
    "pino": "^8.20.0",
    "pino-http": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/cz-commitlint": "^19.2.0",
    "@commitlint/format": "^19.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "commitizen": "^4.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import-x": "^0.5.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^9.0.11",
    "inquirer": "^9.2.17",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint",
      "npm run type-check",
      "npm run format"
    ],
    "*.{json,md}": [
      "npm run format"
    ]
  }
}
